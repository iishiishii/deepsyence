{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "outDir": "./build",
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.*"]
}
